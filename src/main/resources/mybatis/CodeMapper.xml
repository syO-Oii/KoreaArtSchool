<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.maximum.koreaArtSchool.repository.CodeDao">

        <select id="findAll" resultType="com.maximum.koreaartschool.dto.CommCd">
            SELECT *
            FROM COMM_CD
        </select>

        <select id="getCommCdsByCdSe" resultType="com.maximum.koreaartschool.dto.CommCd">
            SELECT *
            FROM COMM_CD
            WHERE CD_SE = #{cdSe}
        </select>

        <select id="getCdNmByCdSeAndCd" resultType="java.lang.String">
            SELECT CD_NM
            FROM COMM_CD
            WHERE CD_SE = #{cdSe}
              AND CD = #{cd}
        </select>

        <insert id="insertCommCd" parameterType="com.maximum.koreaartschool.dto.CommCd">
            INSERT INTO COMM_CD
                (CD_SE, CD, CD_NM, CD_DESC, IS_YN, CREATED_AT, DELETED_AT)
            VALUES
                (#{cdSe}, #{cd}, #{cdNm}, #{cdDesc}, #{isYn}, #{createdAt}, #{deletedAt})
        </insert>

</mapper>